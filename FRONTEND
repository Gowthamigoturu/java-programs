    width: 50%;
    margin: 40px auto;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

#book-list {
    margin-top: 40px;
}

.book {
    margin-bottom: 20px;
    padding: 20px;
